<?xml version="1.0"?>
<ruleset name="Apiera">
    <description>Apiera SDK Coding Standard</description>

    <!-- Include custom sniffs directory -->
    <arg name="standard" value="src/Tools/Apiera"/>

    <!-- Base PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>src</file>

    <!-- Base configuration -->
    <arg name="tab-width" value="4"/>
    <arg name="encoding" value="utf-8"/>

    <!-- Register custom sniffs -->
    <rule ref="Apiera.Declaring.StrictTypes"/>
</ruleset>
